{
  "compilerOptions": {
    "target": "es2021",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2021",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "kendo-ui",
      "jquery"
    ]
  },
  "include": [
    "./modules/**/*.ts",
    "./helpers/**/*.ts",
    "yii.d.ts",
    "src"
  ]
}